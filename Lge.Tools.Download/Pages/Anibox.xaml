<UserControl x:Class="Lge.Tools.Download.Pages.Anibox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Lge.Tools.Download.Pages"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d">
    <UserControl.Resources />
    <Grid>
        <Ellipse x:Name="ellipse"
                 Width="96"
                 Height="96"
                 Fill="#FFF4F4F5"
                 RenderTransformOrigin="0.5,0.5">
            <Ellipse.RenderTransform>
                <TransformGroup>
                    <ScaleTransform x:Name="transscale"
                                    ScaleX="1"
                                    ScaleY="1" />
                    <TranslateTransform x:Name="transmove" X="0" Y="0" />
                </TransformGroup>
            </Ellipse.RenderTransform>
            <Ellipse.Effect>
                <BlurEffect x:Name="effect" />
            </Ellipse.Effect>
        </Ellipse>
    </Grid>
</UserControl>
